<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="8dp"
    android:layout_marginBottom="14dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageViewRing"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="14dp"
            android:scaleType="centerCrop"
            android:tint="#000"
            android:src="@drawable/ic_notification"/>

        <TextView
            android:id="@+id/textViewNotifTitle"
            android:layout_toEndOf="@+id/imageViewRing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8A8787"
            android:textStyle="bold"
            android:layout_marginTop="-2dp"
            android:text="Octaviani" />

        <TextView
            android:id="@+id/textViewNotifContent"
            android:layout_toEndOf="@+id/imageViewRing"
            android:layout_below="@+id/textViewNotifTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8A8787"
            android:maxLength="59"
            android:textSize="14sp"
            android:text="I think it will be interesting right ?" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:45"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="-4dp"
            android:layout_below="@+id/textViewNotifContent"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>