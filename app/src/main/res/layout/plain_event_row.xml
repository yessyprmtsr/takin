<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:maxLength="59"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="24Th Annual Event Name Dolor Sit Amet Azpili" />

        <TextView
            android:id="@+id/textViewEventLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextGrey"
            android:layout_marginTop="4dp"
            android:text="Trans Grand Ballroom, ..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextGrey"
                android:text="Thr, Oct 24" />

            <TextView
                android:id="@+id/textViewBullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextGrey"
                android:text=" \u2022 " />

            <TextView
                android:id="@+id/textViewEventTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextGrey"
                android:text="10:00 WIB" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>